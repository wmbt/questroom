@model QuestRoom.Models.ConfirmResultViewModel
@{
    ViewBag.Title = Model.Title;
}

<div class="row" style="padding-bottom: 50px;">
    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h3 class="panel-title">@Model.Title</h3>
            </div>
            <div class="panel-body">
                <p style="margin-bottom: 50px;">@Model.Message</p>
                @if (Model.ShowLinkToSchedule)
                {
                    @Html.ActionLink(Resources.Strings.GotoBooking, "Index", "Booking", null, new { @class = "btn btn-warning" });
                }
            </div>
            
        </div>
    </div>
</div>