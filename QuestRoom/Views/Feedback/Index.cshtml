@model QuestRoom.Models.FeedbackMessage[]
@{
    ViewBag.Title = @Resources.Strings.Feedback;
}

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h2 class="pull-left">@Resources.Strings.Feedback</h2>
        @Html.ActionLink(Resources.Strings.AddFeedbackMessage, "AddMessage", null, new {@class = "btn btn-warning pull-right feedback-button"})
    </div>
</div>
@foreach (var m in Model)
{
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <h2>@m.QuestName</h2>
            <h4>@string.Format("{0}, {1}", m.PlayerName, m.Created.ToString("dd MMMM yyyy"))</h4>
            <p>@m.Text</p>
        </div>
    </div>
}